<div class="row">
    <% allProducts.forEach(product => { %>
      <div class="col-md-6 col-lg-4 mb-4 mb-md-0">
        <div class="card text-black">
          <img src="<%- product.img.path %>" class="card-img-top" alt="<%- product.name %>" />
          <div class="card-body">
            <div class="text-center mt-1">
              <h4 class="card-title"><%- product.name %></h4>
              <h6 class="text-primary mb-1 pb-3"><%- product.price %> $</h6>
            </div>
            <div class="d-flex flex-row">
              <a href="/products/edit/<%- product._id %>" class="btn btn-primary flex-fill me-1" data-mdb-ripple-color="dark">Edit</a>
              <a href="/products/delete/<%- product._id %>" class="btn btn-danger flex-fill ms-1">Delete</a>
            </div>
            <div class="d-flex flex-row">
              <a href="/products/details/<%- product._id %>" class="btn btn-info flex-fill mt-3 me-1">Read more</a>
              <form action="/products/cart/<%- product._id %>" method="POST">
                <button type="submit" class="btn btn-success flex-fill mt-3 ms-1">Add to cart</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  




